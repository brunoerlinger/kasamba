<h2> Find <strong><%= @category.name %></strong> waste near you </h2>
<hr>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card-serv" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%#= cl_image_path background_url(service), height: 300, width: 400, crop: :fill %>')">
        <div class="card-category">
          <%= product.category.name %>
        </div>
        
        <div class="card-description">
          <h2><%= product.name %></h2>
        </div>

 <div class="row" >
  <div class="col-md-4" >
    <div class="row" style="overflow-y: scroll; height:800px;">
      <% @products.each do |product| %>
        <div class="col-xs-12 col-sm-6" >
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%#= cl_image_path background_url(service), height: 300, width: 400, crop: :fill %>')">
            <div class="card-category">
              <h6><%= product.category.name %></h6>
            </div>
            <div class="card-description">
              <h5><%= product.name %></h5>
            </div>
            
          <%= link_to product.name, product_path(product), class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
   
 <div class="col-md-8">
    <div id="map" style="width: 100%; height: 83vh;">
      <% content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).ready(function() {
            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              if (markers.length == 0) {
                handler.getMap().setZoom(2);
              } else if (markers.length == 1) {
                handler.getMap().setZoom(14);
              }
             });
           });
         <% end %>
       <% end %>
      </div>
    </div>
</div>





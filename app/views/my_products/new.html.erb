<div class="container padded">
<h2> Crie seu produto </h2>
<br>

 <%= simple_form_for @my_product, url: my_products_path do |f| %>
    <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :user_id %>
    <%= f.input :category_id %>
    <%= f.input :price %>
    <%= f.input :address %>
    <%= f.input :status %>
    <br>
    <%= f.submit "Criar Produto", class: "btn btn-primary" %>
  <% end %>

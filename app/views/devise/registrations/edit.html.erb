<div class="container">
  <h2>Edite sua conta <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :first_name, required: false, autofocus: true, hint: "Deixe em branco, caso não queira alterar." %>
    <%= f.input :last_name, required: false, hint: "Deixe em branco, caso não queira alterar." %>
    <%= f.input :username, required: false, hint: "Deixe em branco, caso não queira alterar." %>

    <%= f.input :address, required: false, hint: "Rua, numero" %>
    <%= f.input :zip_code, required: false %>
    <%= f.input :city, required: false %>
    <%= f.input :state, required: false %>
    <%= f.input :country, as: :string, required: false %>

    <%= f.input :password, autocomplete: "off", hint: "Deixe em branco, caso não queira alterar.", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%#= f.input :current_password, hint: "we need your current password to confirm your changes", required: false %>
    <%= f.input :photo, as: :attachinary %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "button-edit btn-sm btn btn-success" %>
    <%= link_to "Back", :back, class: "button-edit btn-sm btn btn-primary"%>
    <h2> Não curtiu?</h2>
    <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button-edit btn-sm btn btn-danger" %>
    <br>
    <br>
  </div>
<% end %>

</div>





  <%= link_to 'Kasambe um novo resÃ­duo', new_mine_product_path, class: "button-index btn btn-primary" %>

  <%#= link_to "Ir para os Produtos", products_path, class: "button-index btn btn-warning" %>
</div>

  <div id="map" style="width: 100px; height: 50px;">
    <% content_for(:after_js) do %>
     <%= javascript_tag do %>
         $(document).ready(function() {
           var handler = Gmaps.build('Google');
           handler.buildMap({ internal: { id: 'map' } }, function() {
           markers = handler.addMarkers(<%= raw @hash.to_json %>);
           handler.bounds.extendWith(markers);
           handler.fitMapToBounds();
           if (markers.length == 0) {
            handler.getMap().setZoom(6);
           }
           });
         });
      <% end %>
    <% end %>
  </div>




<div class="container">
    <div class="col-xs-12 col-sm-4">
      <div class="card-serv" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%#= cl_image_path background_url(@service), height: 300, width: 400, crop: :fill %>')">
      <div class="card-user-service">
        <%= @product.name %>
      </div>
      <div class="card-category-service">
        <%= @product.price %>
      </div>
       <div class="card-description-service">
        <h2><%= @product.description %></h2>
        </div>
      </div>
    </div>
</div>

<div class="well">

  <div class="row">
    <div class="col-xs-4">

      <%= form_for @order_iten, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency @product.price %></span></h4>
        <div class="input-group">
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: @product.id %>
            <%= f.submit "Add to Kasamba", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

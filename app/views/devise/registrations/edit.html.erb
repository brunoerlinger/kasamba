<div class="container">
  <h2>Edite sua conta <%= current_user.first_name %></h2>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: "E-mail", :input_html => {:style => 'width: 400px'}, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :first_name, label: "Nome", required: false, autofocus: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :last_name, label: "Sobrenome", required: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :username, label: "Username", required: true, :input_html => {:style => 'width: 400px'} %>

    <%= f.input :address, label: "Endereço", required: false, :input_html => {:style => 'width: 400px'}, hint: "Rua, número" %>
    <%= f.input :zip_code, label: "CEP", required: false, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :city, label: "Cidade", required: false, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :state, label: "Estado", required: false, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :country, label: "País", as: :string, :input_html => {:style => 'width: 400px'}, required: false %>

    <%= f.input :password, label: "Senha", autocomplete: "off", :input_html => {:style => 'width: 400px'}, hint: "Deixe em branco, caso não queira alterar.", required: false %>
    <%= f.input :password_confirmation, label: "Confirmar senha", :input_html => {:style => 'width: 400px'}, required: false %>
    <%#= f.input :current_password, hint: "we need your current password to confirm your changes", required: false %>
    <%= f.input :photo, label: "Foto", as: :attachinary %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Atualizar", class: "button-edit btn-sm btn btn-success" %>
    <%= link_to "Voltar", :back, class: "button-edit btn-sm btn btn-primary"%>
    <br>
    <br>
    <h2> Não curtiu?</h2>
    <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete, class: "button-edit btn-sm btn btn-danger" %>
    <br>
    <br>
  </div>
<% end %>

</div>





<div class="container">
  <h2>Inscreva-se</h2>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: "Nome", required: true, autofocus: true, :input_html => {:style => 'width: 400px'}%>
    <%= f.input :last_name, label: "Sobrenome", required: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :username, label: "Username", required: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :email, label: "E-mail", required: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :password, label: "Senha", required: true, :input_html => {:style => 'width: 400px'}, hint: ("#{@minimum_password_length} nÃºmero mÃ­nimo de caracteres" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirmar senha", required: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :photo, label: "Foto de perfil", as: :attachinary %>
  </div>

    <div class="form-actions">
      <%= f.button :submit, "Criar Kasamba" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>



<div class="container">
  <h2>Inscreva-se</h2>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true, :input_html => {:style => 'width: 400px'}%>
    <%= f.input :last_name, required: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :username, required: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :email, required: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :password, required: true, :input_html => {:style => 'width: 400px'}, hint: ("#{@minimum_password_length} nÃºmero mÃ­nimo de caracteres" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :photo, as: :attachinary %>
  </div>

    <div class="form-actions">
      <%= f.button :submit, "Inscreva-se" %>
    </div>
  <% end %>

</div>

<%= render "devise/shared/links" %>

<div>
  <%= simple_form_for [:mine, @my_product] do |f| %>
    <%= f.error_notification %>
    <%= f.input :name, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :description, as: :text, :input_html => {:style => 'width: 400px; height: 100px'} %>
    <%= f.input :category_id, :input_html => {:style => 'width: 400px'}, collection: @categories, as: :grouped_select, group_method: :children %>
    <%= f.input :price, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :address, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :city, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :state, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :zip_code, :input_html => {:style => 'width: 400px'} %>
    <%= f.input :photos, as: :attachinary %>
    <br>
    <%= f.submit "Kasambar", class: "btn btn-success" %>
  <% end %>
</div>


<div class="container">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
  <% end -%>
  <br>
  <%#- if controller_name != 'sessions' %>
    <%#= link_to "Entrar", new_session_path(resource_name), class:"btn btn-success btn-login" %>
  <%# end -%>

  <div class="form-inline">

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Crie sua Kasamba", new_registration_path(resource_name), class:"btn btn-success btn-login" %>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Crie sua Kasamba com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn btn-success btn-login" %>
    <% end -%>
    </div>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Não recebeu instruções para confirmação?", new_confirmation_path(resource_name) %><br />
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Não recebeu informações para desbloqueio?", new_unlock_path(resource_name) %><br />
  <% end -%>

  <% end -%>
  </div>
  <br>




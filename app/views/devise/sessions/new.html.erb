<div class="container">
  <h2>Acesse sua Kasamba!</h2>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: "E-mail", required: false, autofocus: true, :input_html => {:style => 'width: 400px'} %>
      <%= f.input :password, label: "Senha", required: false, :input_html => {:style => 'width: 400px'}  %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>

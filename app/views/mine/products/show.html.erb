#SHOW | My_product

<h2> <%= @my_product.name %></h2>
<h4><%= @my_product.description %></h4>

<%= link_to "Edit", edit_mine_product_path(@my_product), class:"btn btn-primary" %>

<%= link_to "Delete", mine_product_path(@my_product), class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>

<% if @my_product.photos? %>
  <% @my_product.photos.each do |photo| %>
    <%= cl_image_tag photo.path, width: 200, height: 300, crop: :fill %>
  <% end %>
<% end %>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
